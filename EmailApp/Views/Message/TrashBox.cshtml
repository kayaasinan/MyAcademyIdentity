@model List<Message>
@{
    ViewData["Title"] = "TrashBox";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="mailcontent-subject">
    <h4>Çöp Kutusu</h4>
</div>

@if (Model == null || !Model.Any())
{
    <div style="text-align:center; padding:40px;">
        <i class="ri-mail-close-line" style="font-size:48px; color:#ccc;"></i>
        <h4 style="color:#666; margin-top:10px;">Görüntülenecek mesaj bulunamadı</h4>
    </div>
}
else
{

    @foreach (var item in Model)
    {
        <div class="mailcontent-group">
            <div class="mailcontent-item">
                <div style="display: flex; justify-content: space-between; align-items: center; font-size: 12px; color: #666; margin-top: 2px;">
                    <div>
                        @item.Sender?.FirstName @item.Sender?.LastName &lt;<strong>@item.Sender?.Email</strong>&gt;
                        @if (item.Reciever != null)
                        {
                            <text>Kime: <strong>@item.Reciever.FirstName @item.Reciever.LastName</strong></text>
                        }
                    </div>
                    <div style="color: tomato;">
                        @item.SendDate.ToString("dd-MM-yyyy")
                    </div>
                </div>


                <div class="mailcontent-body" style="display: flex; justify-content: space-between; align-items: center; margin-top: 5px;">

                    <div style="display: flex; align-items: center; gap: 16px;">
                        <p style="margin:0; font-size:14px; font-weight:500;">
                            Konu:<strong> @item.Subject</strong>
                            <span style="color:#007bff;">⇒ @(item.Body.Length > 50 ? item.Body.Substring(0, 50) + "..." : item.Body)</span>
                        </p>
                    </div>


                    <div style="display: flex; align-items: center; gap: 10px;">
                        <a href="/Message/MessageDetail/@item.MessageId"
                           class="btn btn-sm btn-primary"
                           style="padding: 2px 8px; font-size: 12px; border-radius: 3px;">Oku</a>

                        <button onclick="backToMessage(@item.MessageId)"
                                class="btn btn-sm btn-success"
                                style="padding: 2px 8px; font-size: 12px; border-radius: 3px;">
                            Geri Al
                        </button>

                        <button onclick="deletedMessage(@item.MessageId)" class="btn btn-sm btn-danger" style="padding: 2px 8px; font-size: 12px; border-radius: 3px;">
                            <i class="ri-delete-bin-line"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

<script>
    function deletedMessage(id) {
        Swal.fire({
            title: "Mesajı kalıcı olarak silmek istediğinizden emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Message/DeleteTrashBoxMessage/" + id;
            }
        });
    }
</script>

<script>
    function backToMessage(id) {
        Swal.fire({
            title: "Mesajı geri almak istediğinizden emin misiniz?",
            text: "Mesaj ilgili kutuya taşınacak.",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: "#28a745",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Geri Al!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement("form");
                form.method = "POST";
                form.action = "/Message/BackToMessage";

                const input = document.createElement("input");
                input.type = "hidden";
                input.name = "id";
                input.value = id;

                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>

