@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="message-compose">
    <div class="mailcontent-subject">
        <h4>Yeni Mesaj Gönder</h4>
    </div>
    <div class="mailcontent-group">
        <div class="mailcontent-item">
            <div class="mailcontent-body">
                <form method="post">
                    <div class="form-group">
                        <label for="recipientEmail">Alıcı:</label>
                        <input type="email" class="form-control" asp-for="RecieverEmail" placeholder="Alıcının e-posta adresini girin" required>
                    </div>

                    <div class="form-group">
                        <label for="subject">Konu:</label>
                        <input type="text" class="form-control" asp-for="Subject" placeholder="Konu başlığını girin" required>
                    </div>

                    <div class="form-group">
                        <label for="messageBody">Mesaj:</label>
                        <textarea class="form-control" asp-for="Body" rows="15" placeholder="Mesajınızı buraya yazın" required></textarea>
                    </div>
                    <br />
                    <div style="display: flex; gap: 10px;">
                        <button type="submit" name="action" value="send" class="btn btn-outline-info btn-icontext">
                            <i class="ri-send-plane-fill me-2"></i> Gönder
                        </button>

                        <button type="submit" name="action" value="draft" class="btn btn-outline-success btn-icontext">
                            <i class="ri-reply-line me-1"></i> Taslaklara Kaydet
                        </button>
                    </div>
                </form>
             
            </div>
        </div>
    </div>
</div>
