@model List<Message>
@{
    Layout = "~/Views/MainLayout/Index.cshtml";

    string title = "Mesajlar"; 
    var category = (MessageCategory)ViewBag.Category;

    switch (category)
    {
        case MessageCategory.Business:
            title = "İş Mesajları"; break;
        case MessageCategory.Family:
            title = "Aile Mesajları"; break;
        case MessageCategory.Important:
            title = "Önemli Mesajlar"; break;
    }
}

<div class="mailcontent-subject">
    <h4>@title</h4>
</div>

@foreach (var item in Model)
{
    <div class="mailcontent-group">
        <div class="mailcontent-item">
    
            <div style="display:flex; justify-content:space-between; font-size:12px; color:#666; margin-top:2px;">
                <div>
                    @item.Sender.FirstName @item.Sender.LastName &lt;<strong>@item.Sender.Email</strong>&gt;
                    Kime: <strong>@item.Reciever.FirstName @item.Reciever.LastName</strong>
                </div>
                <div style="color: tomato;">@item.SendDate.ToString("dd-MM-yyyy")</div>
            </div>

   
            <div class="mailcontent-body" style="display:flex; justify-content:space-between; align-items:center; margin-top:4px;">
                <p style="margin:0; font-size:14px; font-weight:500;">Konu: @item.Subject</p>

          
                <div style="display:flex; gap:10px;">
                    <a href="/Message/MessageDetail/@item.MessageId" class="btn btn-sm btn-primary"
                       style="padding:2px 8px; font-size:12px; border-radius:3px;">Oku</a>

                    <button class="btn btn-sm btn-success" onclick="backToMessage(@item.MessageId)"
                            style="padding:2px 8px; font-size:12px; border-radius:3px;">
                        Geri Al
                    </button>

                    <button class="btn btn-sm btn-danger" onclick="deletedMessage(@item.MessageId)"
                            style="padding:2px 8px; font-size:12px; border-radius:3px;">
                        <i class="ri-delete-bin-line"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}


<script>
    function deletedMessage(id){
        Swal.fire({
            title: "Mesajı çöp kutusuna göndermek istediğinizden emin misiniz?",
            text: "Geri almak için ÇÖP KUTUSU sayfasına gidiniz!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if(result.isConfirmed){
                window.location.href = "/Message/DeleteMessage/" + id;
            }
        });
    }

    function backToMessage(id){
        Swal.fire({
            title: "Mesajı geri almak istediğinizden emin misiniz?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Geri Al!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if(result.isConfirmed){
                window.location.href = "/Message/BackToMessage/" + id;
            }
        });
    }
</script>



