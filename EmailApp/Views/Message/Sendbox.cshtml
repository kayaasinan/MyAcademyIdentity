@model IPagedList<Message>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="mailcontent-subject">
    <h4>Giden Kutusu</h4>
</div>
@if (Model == null || !Model.Any())
{
    @await Component.InvokeAsync("_MainLayoutEmptyPageComponent")
}
else
{

    @foreach (var item in Model)
    {
        <div class="mailcontent-group">
            <div class="mailcontent-item">
                <div style="display: flex; justify-content: space-between; align-items: center; font-size: 12px; color: #666; margin-top: 2px;">
                    <div>
                        @item.Sender.FirstName @item.Sender.LastName &lt;<strong>@item.Sender.Email</strong>&gt; Kime: <strong>@item.Reciever.FirstName @item.Reciever.LastName</strong>
                    </div>
                    <div style="color: tomato;">
                        @item.SendDate.ToString("dd-MM-yyyy")
                    </div>
                </div>

                <div class="mailcontent-body" style="display: flex; justify-content: space-between; align-items: center; padding:5px 10px; border-radius:4px;">

                    <div style="display: flex; align-items: center; gap: 16px;">
                        <form method="post" action="/Message/ChangeCategory" style="display:inline;">
                            <input type="hidden" name="id" value="@item.MessageId" />
                            <input type="hidden" name="category" value="Important" />
                            <button type="submit" style="background:none; border:none; cursor:pointer; color: #f5c518; font-size: 20px;">
                                <i class="ri-star-line"></i>
                            </button>
                        </form>

                        <form method="post" action="/Message/ChangeCategory" style="display:inline;">
                            <input type="hidden" name="id" value="@item.MessageId" />
                            <input type="hidden" name="category" value="Family" />
                            <button type="submit" style="background:none; border:none; cursor:pointer; color: #28a745; font-size: 20px;">
                                <i class="ri-home-heart-line"></i>
                            </button>
                        </form>

                        <form method="post" action="/Message/ChangeCategory" style="display:inline;">
                            <input type="hidden" name="id" value="@item.MessageId" />
                            <input type="hidden" name="category" value="Business" />
                            <button type="submit" style="background:none; border:none; cursor:pointer; color: #dc3545; font-size: 20px;">
                                <i class="ri-briefcase-line"></i>
                            </button>
                        </form>

                        <p style="margin:0; font-size:14px; font-weight:500;">
                            Konu:<strong> @item.Subject</strong>
                            <span style="color:#007bff;">⇒ @(item.Body.Length > 50 ? item.Body.Substring(0, 50) + "..." : item.Body)</span>
                        </p>
                    </div>

                    <div style="display: flex; align-items: center; gap: 10px;">
                        <a href="/Message/MessageDetail/@item.MessageId" class="btn btn-sm btn-primary" style="padding: 2px 8px; font-size: 12px; border-radius: 3px;">
                            Oku
                        </a>
                        <button onclick="deletedMessage(@item.MessageId)" class="btn btn-sm btn-danger" style="padding: 2px 8px; font-size: 12px; border-radius: 3px; margin-left: auto;">
                            <i class="ri-delete-bin-line"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}
<div class="mailcontent-footer">
    <a href="/Message/SendMessage/" class="btn btn-outline-info btn-icontext"><i class="ri-reply-line me-1"></i> Mesaj Gönder</a>
</div>



@await Component.InvokeAsync("_MainLayoutPagedComponent", new { model = Model, actionName = "Sendbox" })